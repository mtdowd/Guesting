<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <%= render "error_messages", errors: @user.errors %>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
